{
  "phases": {
    "install": {
      "cmds": ["npm ci"]
    },
    "build": {
      "cmds": [
        "cd frontend && npm ci",
        "cd frontend && npm run build", 
        "cd server && npm ci"
      ]
    },
    "start": {
      "cmd": "cd server && npx sequelize-cli db:migrate && npm start"
    }
  }
}
